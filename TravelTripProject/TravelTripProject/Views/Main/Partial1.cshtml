@using TravelTripProject.Models.classes
@model List<Blog>


<div class="con-bot">
    @foreach (var p in Model)
    {

        <div class="left">
            <div class="bot-left">
                <img src="@p.BlogFoto" alt="" />
            </div>
            <div class="left-text">
                <h4>@p.Baslik</h4>
                <span class="doller">@p.Tarih.ToString("dd.MM.yyyy")</span>
                <p>@p.Aciklama.Substring(0, 80)...</p>
                <p><a href="/Blog/BlogDetay/@p.ID"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>

    }
    @Html.Action("Partial2", "Main")
 
    <div class="clear"></div>
</div>
